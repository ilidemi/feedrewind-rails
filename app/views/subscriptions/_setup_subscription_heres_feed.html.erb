<%
  enabled_days_of_week = subscription
    .schedules
    .where("count > 0")
    .order(:day_of_week)
    .map(&:day_of_week)
  days_of_week = %w[sun mon tue wed thu fri sat]
  today_index = days_of_week.index(DateService.day_of_week)
  if subscription.is_added_past_midnight
    days_of_week_from_next_schedule = days_of_week.rotate(today_index)
  else
    days_of_week_from_next_schedule = days_of_week.rotate((today_index + 1) % 7)
  end
  next_enabled_day_of_week = days_of_week_from_next_schedule
    .first { |day_of_week| enabled_days_of_week.include?(day_of_week) }
  next_enabled_day_of_week_str = Date.strptime(next_enabled_day_of_week, "%a").strftime("%A")
%>
First post will arrive on <%= next_enabled_day_of_week_str %>.
