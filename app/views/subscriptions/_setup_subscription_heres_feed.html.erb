<%= render partial: "info_popup" %>
<div class="flex flex-col gap-6">
  <div class="flex flex-col gap-1">
    <p>Here's your private feed link. Add it to your feed reader and you're all set!</p>
    <div>
      <%= render partial: "copy_feed_link",
                 locals: {
                   request: request,
                   subscription: subscription,
                   js_trigger_popup: "triggerInfoPopup"
                 }
      %>
    </div>
  </div>

  <%
    enabled_days_of_week = subscription
      .schedules
      .where("count > 0")
      .order(:day_of_week)
      .map(&:day_of_week)
    days_of_week = %w[sun mon tue wed thu fri sat]
    today_index = days_of_week.index(DateService.day_of_week)
    if subscription.is_added_past_midnight
      days_of_week_from_next_schedule = days_of_week.rotate(today_index)
    else
      days_of_week_from_next_schedule = days_of_week.rotate((today_index + 1) % 7)
    end
    next_enabled_day_of_week = days_of_week_from_next_schedule
      .filter { |day_of_week| enabled_days_of_week.include?(day_of_week) }
      .first
    next_enabled_day_of_week_str = Date.strptime(next_enabled_day_of_week, "%a").strftime("%A")
  %>
  <p>First entry will arrive on <%= next_enabled_day_of_week_str %>.</p>

  <p class="inline-flex flex-row gap-2">
    <%= link_to subscriptions_path, class: "btn-secondary bg-gray-50 inline-flex flex-row gap-1 items-center" do %>
      <!-- arrow-left icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Dashboard
    <% end %>
    <%= link_to subscription_path, class: "btn-secondary bg-gray-50 inline-flex flex-row gap-0.5 items-center" do %>
      <!-- cog icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      Manage
    <% end %>
  </p>
</div>