<div class="flex flex-col gap-y-6">
  <% suggested_categories.each_with_index do |category, index| %>
    <div class="flex flex-row <%= width_class %>">
      <% if index == 1 %>
        <div class="flex-1"></div>
      <% end %>
      <div class="w-fit">
        <div class="text-lg font-semibold py-1"><%= category.name %></div>
        <% category.blogs.each do |blog| %>
          <div class="flex flex-row gap-4 items-baseline py-0.5">
            <span class="flex-1">
              <a class="link text-black" href="<%= blog.url %>" target="_blank"><%= blog.name %></a><!--
           --><a class="link" href="<%= blog.url %>" target="_blank"><!--
                 external-link icon
             --><svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 pt-0.75 inline align-baseline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </span>

            <a class="text-white bg-slate-700 hover:bg-slate-900 rounded-md px-1 py-1 hover:cursor-pointer self-start" href="<%= SubscriptionsHelper.subscription_add_feed_path(blog.feed_url) %>">
              <!-- plus-sm icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="pt-8 flex flex-row <%= width_class %>">
    <div class="flex-1"></div>
    <div class="w-fit">
      <div class="text-lg font-semibold py-1">Miscellaneous</div>
      <% miscellaneous_blogs.each do |blog| %>
        <div class="flex flex-row gap-3 items-baseline py-0.5">
          <span class="flex-1 inline-block">
            <a class="link text-black" href="<%= blog.url %>" target="_blank"><%= blog.name %></a><!--
         --><a class="link" href="<%= blog.url %>" target="_blank"><!--
              external-link icon
           --><svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 pt-0.75 inline align-baseline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg><!--
         --></a>
          </span>

          <div class="rounded-full bg-slate-100 text-sm px-2"><%= blog.tag.gsub(" ", "\u00A0") %></div>

          <a class="text-white bg-slate-700 hover:bg-slate-900 rounded-md px-1 py-1 hover:cursor-pointer self-start" href="<%= SubscriptionsHelper.subscription_add_feed_path(blog.feed_url) %>">
            <!-- plus icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
            </svg>
          </a>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex flex-row gap-x-4 gap-y-1 flex-wrap items-baseline pt-8">
    <div>Or check out some blog aggregators:</div>
    <div class="flex flex-row gap-x-4 flex-nowrap items-baseline">
      <div class="flex flex-row">
        <a class="link text-black" href="https://blogsurf.io/" target="_blank">Blog Surf</a>
        <a class="link" href="https://blogsurf.io/" target="_blank">
          <!-- external-link icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 pt-0.75 inline align-baseline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
      <div class="flex flex-row">
        <a class="link text-black" href="https://refined.blog/" target="_blank">Refined Blog</a>
        <a class="link" href="https://refined.blog/" target="_blank">
          <!-- external-link icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 pt-0.75 inline align-baseline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>