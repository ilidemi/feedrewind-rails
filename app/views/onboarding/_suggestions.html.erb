<div class="flex flex-col gap-y-3">
  <% suggested_categories.each_with_index do |category, index| %>
    <div class="flex flex-row <%= width_class %>">
      <% if index == 1 %>
        <div class="flex-1"></div>
      <% end %>
      <div class="w-fit">
        <div class="text-lg font-semibold py-1"><%= category.name %></div>
        <% category.blogs.each do |blog| %>
          <div class="flex flex-row gap-4 items-baseline py-0.5">
            <span class="flex-1">
              <a href="<%= blog.url %>" target="_blank" class="external-link"><span class="link text-black"><%= blog.name %></span></a>
            </span>

            <a class="text-white bg-primary-700 hover:bg-primary-900 rounded-md px-1 py-1 hover:cursor-pointer self-start" href="<%= SubscriptionsHelper.subscription_add_feed_path(blog.feed_url) %>">
              <!-- plus-sm icon -->
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
            </a>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="pt-8 flex flex-row <%= width_class %>">
    <div class="flex-1"></div>
    <div class="w-fit">
      <div class="text-lg font-semibold py-1">Miscellaneous</div>
      <% miscellaneous_blogs.each do |blog| %>
        <div class="flex flex-row gap-3 items-baseline py-0.5">
          <span class="flex-1 inline-block">
            <a href="<%= blog.url %>" target="_blank" class="external-link"><span class="link text-black break-word"><%= blog.name %></span></a>
          </span>

          <div class="rounded-full bg-primary-100 text-sm px-2"><%= blog.tag.gsub(" ", "\u00A0") %></div>

          <a class="text-white bg-primary-700 hover:bg-primary-900 rounded-md px-1 py-1 hover:cursor-pointer self-start" href="<%= SubscriptionsHelper.subscription_add_feed_path(blog.feed_url) %>">
            <!-- plus-sm icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </a>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex flex-row gap-x-4 gap-y-1 flex-wrap items-baseline pt-8">
    <div>Or check out some blog aggregators:</div>
    <div class="flex flex-row gap-x-4 flex-wrap items-baseline">
      <a class="external-link" href="https://substack.com/discover" target="_blank"><span class="link text-black">Substack</span></a>
      <a class="external-link" href="https://blogsurf.io/" target="_blank"><span class="link text-black">Blog Surf</span></a>
      <a class="external-link" href="https://refined.blog/" target="_blank"><span class="link text-black">Refined Blog</span></a>
    </div>
  </div>
</div>