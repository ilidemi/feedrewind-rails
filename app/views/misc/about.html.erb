  <script>
      document.getElementById("licenses_toggle").addEventListener("click", () => {
          const suggestionsToggleIcon = document.getElementById("licenses_toggle_icon");
          suggestionsToggleIcon.classList.toggle("rotate-180");

          const suggestionsBody = document.getElementById("licenses_body");
          if (suggestionsBody.style.maxHeight) {
              suggestionsBody.style.maxHeight = null;
          } else {
              suggestionsBody.style.maxHeight = suggestionsBody.scrollHeight + "px";
          }
