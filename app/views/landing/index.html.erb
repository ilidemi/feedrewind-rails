<div class="min-h-screen p-6 pb-14 flex flex-col">
  <header class="flex flex-row gap-x-6 gap-y-2 flex-wrap justify-between items-center">
    <h1 class="text-2xl xs:text-4xl">
      <a href="/" class="hover:cursor-pointer">FeedRewind</a>
    </h1>
    <div class="flex flex-row gap-2">
      <%= link_to "Sign in", login_path, class: "text-sm text-slate-700 border border-gray-300 hover:border-slate-900 rounded-full px-3 py-1.5 hover:cursor-pointer" %>
      <%= link_to "Sign up", signup_path, class: "text-sm text-white bg-slate-700 hover:bg-slate-900 rounded-full px-3 py-1.5 hover:cursor-pointer" %>
    </div>
  </header>
  <main class="flex-1 flex flex-col gap-6">
    <div class="flex flex-col min-h-[75vh]">
      <div class="flex flex-col gap-3 xs:gap-6 mt-[10vh]">
        <h1 class="text-xl 3xs:text-2xl xs:text-3xl sm:text-4xl md:text-5xl font-extrabold flex flex-col headline">
          <span>Read
            <span class="relative">
              <span class="word word1">blogs</span>
              <span class="word word2">newsletters</span>
              <span class="word word3">webcomics</span>
            </span>
          </span>
          <span>from the beginning.</span>
          <span>At your own pace.</span>
        </h1>

        <ul class="flex flex-row flex-wrap gap-x-6 gap-y-1 text-sm xs:text-base">
          <li class="flex flex-row gap-0.5 items-center">
            <!-- arrow-circle-right -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 xs:w-3.5 xs:h-3.5 align-text-bottom text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Pick a feed
          </li>
          <li class="flex flex-row gap-0.5 items-center">
            <!-- arrow-circle-right -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 xs:w-3.5 xs:h-3.5 align-text-bottom text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Set a schedule
          </li>
          <li class="flex flex-row gap-0.5 items-center">
            <!-- arrow-circle-right -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 xs:w-3.5 xs:h-3.5 align-text-bottom text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Receive via email or RSS
          </li>
        </ul>
      </div>

      <div class="flex flex-col gap-1 mt-[10vh]">
        <div class="font-semibold">Try it out:</div>
        <% if @subscription %>
          <div>
            <a class="link"
               href="<%= SubscriptionsHelper.setup_path(@subscription) %>"
            >Continue with <span class="font-semibold"><%= @subscription.name %></span></a>
            or
            <%= link_to "another feed",
                        "/discard",
                        method: :post,
                        class: "link"
            %>
          </div>
        <% else %>
          <%= form_with url: "subscriptions/add",
                        method: :post,
                        html: { novalidate: true } do |form| %>
            <div class="flex flex-row w-[480px] max-w-full">
              <%= form.url_field :start_url,
                                 placeholder: "Feed or blog link",
                                 autocomplete: "off",
                                 class: "border border-slate-700 rounded-l-md w-full focus:ring-transparent focus:shadow-none"
              %>
              <button id="discover_go"
                      type="submit"
                      class="btn-no-disable rounded-l-none border border-slate-700 rounded-r-md relative"
              >
                <div id="discover_go_label">Go</div>
                <div id="discover_spinner" class="absolute-center hidden">
                  <div class="spinner spinner-dark"></div>
                </div>
              </button>

              <script>
                  function showSpinner() {
                      const label = document.getElementById("discover_go_label");
                      label.classList.add("invisible");
                      const spinner = document.getElementById("discover_spinner");
                      spinner.classList.remove("hidden");
                      void spinner.offsetWidth; // trigger reflow
                  }

                  const discoverButton = document.getElementById("discover_go");
                  discoverButton.addEventListener("click", () => {
                      showSpinner();
                  });
              </script>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div id="suggestions" class="flex flex-col gap-y-6">
      <div>
        <div>
          <span class="whitespace-nowrap">Not sure what to read?</span>
          <span class="whitespace-nowrap">Start with one of our picks:</span>
        </div>
        <div class="text-xs text-gray-500">(not affiliated with FeedRewind)</div>
      </div>

      <%= render partial: "onboarding/suggestions",
                 locals: {
                   suggested_categories: @suggested_categories,
                   miscellaneous_blogs: @miscellaneous_blogs,
                   width_class: "max-w-[480px]"
                 }
      %>
    </div>
  </main>
  <footer>
    <div class="text-sm flex flex-row gap-6 pt-16">
      <a href="mailto:contact@feedrewind.com" target="_blank" class="link-secondary">Contact</a>
      <a href="/terms" class="link-secondary">Terms</a>
      <a href="/privacy" class="link-secondary">Privacy</a>
      <a href="/about" class="link-secondary">About</a>
    </div>
  </footer>
</div>