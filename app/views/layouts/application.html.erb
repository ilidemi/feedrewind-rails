<!DOCTYPE html>
<html>
<head>
  <title>FeedRewind</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind" %>

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>
</head>

<body class="container mx-auto max-w-screen-md">
<%= render partial: "popups/popups" %>
<div class="min-h-screen p-6 pb-14 flex flex-col gap-6 modal-inert">
  <header class="flex flex-row flex-wrap gap-x-6 gap-y-1 justify-between items-center">
    <h1 class="text-4xl">
      <a href="/" class="hover:cursor-pointer">FeedRewind</a>
    </h1>
    <% if current_user %>
      <div class="relative inline-block text-sm">
        <button id="user_button"
                type="button"
                class="btn-secondary inline-flex gap-0.5 items-center w-full shadow-sm"
                aria-expanded="false"
                aria-haspopup="true"
                aria-label="User dropdown"
        >
          <!-- user-circle icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <!-- chevron-down icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>

        <div id="user_menu"
             class="hidden origin-top-right absolute right-0 mt-2 min-w-56 w-fit rounded-md shadow-lg bg-white border border-gray-300 divide-y divide-gray-100 focus:outline-none text-gray-700"
             aria-orientation="vertical"
             aria-labelledby="user_button"
             tabindex="-1"
        >
          <div class="block px-3 py-3">
            Signed in as <span class="font-semibold"><%= current_user.email %></span>
          </div>
          <a href="/settings" class="block px-3 py-3 hover:bg-gray-50 flex items-center gap-1.5">
            <!-- cog icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Settings
          </a>
          <a href="<%= logout_path %>" class="block px-3 py-3 hover:bg-gray-50 flex items-center gap-1.5">
            <!-- logout icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Sign out
          </a>
        </div>
      </div>
      <script>
          document.getElementById("user_button").addEventListener("click", () => {
              let userMenu = document.getElementById("user_menu");
              if (userMenu.classList.contains("hidden")) {
                  userMenu.classList.remove("user-menu-disappear");
                  userMenu.classList.remove("hidden");
                  userMenu.classList.add("user-menu-appear");
              } else {
                  userMenu.classList.remove("user-menu-appear");
                  userMenu.classList.add("user-menu-disappear");
              }
          });

          document.getElementById("user_menu").addEventListener("animationend", (event) => {
              let userMenu = document.getElementById("user_menu");
              if (event.animationName === "user-menu-disappear") {
                  userMenu.classList.add("hidden");
              }
          });
      </script>
    <% end %>
  </header>
  <main class="flex-1">
    <%= yield %>
  </main>
  <footer class="flex flex-row items-baseline gap-6 pt-16 flex-wrap">
    <% if @current_user %>
      <div class="flex-grow">
        <a href="mailto:support@feedrewind.com" class="link">support@feedrewind.com</a>
      </div>
    <% end %>
    <div class="text-sm flex flex-row gap-6">
      <a href="mailto:contact@feedrewind.com" class="link-secondary">Contact</a>
      <a href="/terms" class="link-secondary">Terms</a>
      <a href="/privacy" class="link-secondary">Privacy</a>
      <a href="/about" class="link-secondary">About</a>
    </div>
  </footer>
</div>
</body>
</html>
